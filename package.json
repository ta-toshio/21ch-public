{
  "name": "nuxt-sample-three",
  "version": "1.0.0",
  "description": "My lovely Nuxt.js project",
  "author": "ta-toshio",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon app/server/index.js --watch server",
    "build": "yarn run clean && yarn run build:nuxt && yarn run build:copy",
    "build:nuxt": "nuxt build",
    "build:copy": "rm -rf public && mkdir public && cp -R .nuxt functions/nuxt && cp -R .nuxt/dist/client public/assets && cp -R app/static/* public && rsync -av app/server/* functions/ --exclude index.js",
    "start": "cross-env NODE_ENV=production node app/server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "yarn run lint",
    "test": "jest",
    "serve": "firebase serve",
    "deploy": "firebase deploy",
    "clean": "rm -rf .nuxt public functions/nuxt"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/markdownit": "^1.2.4",
    "@nuxtjs/pwa": "^2.6.0",
    "body-parser": "^1.19.0",
    "cookieparser": "^0.1.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "firebase": "^5.11.1",
    "firebase-admin": "^7.3.0",
    "firebaseui": "^3.6.0",
    "firebaseui-ja": "^1.0.0",
    "js-cookie": "^2.2.0",
    "lodash.isempty": "^4.4.0",
    "lodash.pick": "^4.4.0",
    "nuxt": "^2.4.0",
    "twitter": "^1.7.1",
    "uuid": "^3.3.2",
    "vue-infinite-loading": "^2.4.4",
    "vue-nl2br": "^0.1.1",
    "vue-social-sharing": "^2.4.3",
    "vuelidate": "^0.7.4",
    "vuetify": "^1.5.5",
    "vuetify-loader": "^1.2.1"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^0.0.1",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": ">=12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": ">=2.16.0",
    "eslint-plugin-jest": ">=22.3.0",
    "eslint-plugin-node": ">=8.0.1",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "jest": "^24.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^3.0.3"
  }
}
